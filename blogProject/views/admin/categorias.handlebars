<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add">
    <button class="btn btn-success">Nova Categoria</button>
</a>

{{#each categorias}}
    <div class ='card mt-4'>
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data de Criação: {{data}}</small>
            <a href="/admin/categorias/edit/{{_id}}"><br>
                <button class="btn btn-warning mt-4">Editar Categoria</button>
            </a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger mt-4">Excluir Categoria</button>
            </form>
        </div>
    </div>
{{else}}
<div class="mt-4">
    <h4>Nenhuma Categoria Registrada.</h4>
</div>

{{/each}}