<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-success">Nova postagem</button>
</a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small>
            <br>
            <small>Categoria: {{categoria.nome}}</small>
            <a href="/admin/postagens/edit/{{_id}}"><br>
                <button class="btn btn-warning mt-4">Editar Postagem</button>
            </a>
            <form action="/admin/postagens/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger mt-4">Excluir Postagem</button>
            </form>
        </div>
    </div>
{{else}}
    <p class="mt-4">Nenhuma Postagem registrada.</p>
{{/each}}